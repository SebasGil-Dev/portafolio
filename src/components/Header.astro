<!-- Header principal del sitio -->
<header class="header">
  <!-- Sección: Logo -->
  <div class="logo">
    <img src="/profile.jpg" alt="Logo" class="logo-img" />
  </div>

  <!-- Sección: Navegación principal -->
  <nav class="nav">
    <a href="#about" data-i18n="about"></a>
    <a href="#habilidades" data-i18n="skills"></a>
    <a href="#proyectos" data-i18n="projects"></a>
    <a href="#contacto" data-i18n="contact"></a>
  </nav>

  <!-- Sección: Controles (modo oscuro y selector de idioma) -->
  <div class="controls">
    <!-- Botón para alternar modo claro/oscuro -->
    <button id="toggle-dark" title="Modo claro/oscuro" class="modo-toggle">🌗</button>

    <!-- Selector de idioma -->
    <div class="toggle-idioma-switch" id="lang-toggle">
      <div class="toggle-slider" id="lang-slider"></div>
      <span id="lang-es" class="idioma-opcion">ES</span>
      <span id="lang-en" class="idioma-opcion">EN</span>
    </div>
  </div>
</header>

<!-- Decoración LED en el header (solo decorativa, sin interacción) -->
<div class="header-led-decoration" aria-hidden="true"></div>
